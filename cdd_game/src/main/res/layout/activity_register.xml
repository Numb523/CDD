<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/playing_bg"
    android:gravity="center">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入昵称:"
        android:textSize="16dp">
     </TextView>
     <EditText
         android:id="@+id/register_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
         android:textSize="16dp"
         android:textColor="#111111"
        android:background="#FFFFFF"
         android:maxLines="1">
     </EditText>
    </LinearLayout>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="请选择头像："></TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/p1"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_1"></ImageButton>

        <ImageButton
            android:id="@+id/p2"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_2">
        </ImageButton>
        <ImageButton
            android:id="@+id/p3"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_3">
        </ImageButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/p4"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_4">
        </ImageButton>
        <ImageButton
            android:id="@+id/p5"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_5">
        </ImageButton>
        <ImageButton
            android:id="@+id/p6"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_6">
        </ImageButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageButton
            android:id="@+id/p7"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_7">
        </ImageButton>
        <ImageButton
            android:id="@+id/p8"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_8">
        </ImageButton>
        <ImageButton
            android:id="@+id/p9"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_9">
        </ImageButton>
    </LinearLayout>
    <Button
        android:id="@+id/ensure_reg"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/register"
        android:layout_marginTop="15dp"
        android:background="@drawable/blue">
    </Button>
</LinearLayout>