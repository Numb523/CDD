<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_settings"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="4">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </LinearLayout>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="6">
       <LinearLayout
           android:layout_width="400dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="center"
           android:orientation="horizontal">
           <!--更换用户-->
         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_change"></ImageView>
           <!--下拉框-->
        <Spinner
            android:id="@+id/name_select"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:background="#FFC107"></Spinner>
       </LinearLayout>
       <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
           android:weightSum="1"
           android:gravity="center">
           <!--游戏音乐-->
         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/game_music"></ImageView>
           <!--音量滑动条-->
         <SeekBar
            android:id="@+id/music_bar"
            android:layout_width="270dp"
            android:layout_height="28dp"
            android:max="100"
            style="@android:style/Widget.SeekBar"
            android:progress="50"></SeekBar>
           <!--显示滑动条当前值-->
         <TextView
            android:id="@+id/music_process"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:text="50"></TextView>
       </LinearLayout>
       <LinearLayout
        android:layout_width="400dp"
           android:layout_weight="1"
        android:layout_height="wrap_content"
           android:gravity="center">
           <!--游戏音效-->
         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/game_sound_effect"></ImageView>
           <!--滑动条-->
         <SeekBar
            android:id="@+id/sound_effect_bar"
            style="@android:style/Widget.SeekBar"
            android:layout_width="270dp"
            android:layout_height="28dp"
            android:max="100"
            android:progress="50"></SeekBar>
           <!--显示滑动条当前值-->
         <TextView
            android:id="@+id/sound_prrocess"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:text="50"></TextView>
      </LinearLayout>
        <!--返回按钮-->
        <ImageButton
            android:id="@+id/return_main"
            android:layout_width="67dp"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/return_mian"></ImageButton>
    </LinearLayout>
</LinearLayout>